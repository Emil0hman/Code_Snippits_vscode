{
    "HTML Starter Template": {
        "prefix": "_html-start",
        "body": [
            "<!DOCTYPE html>",
            "<html lang=\"en\">",
            "<head>",
            "   <meta charset=\"utf-8\">",
            "   <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
            "   <meta http-equiv=\"X-UA-Compatible\" content=\"ie=edge\">",
            "   <link rel=\"stylesheet\" href=\"style.css\">",
            "   <title>${1:title}</title>",
            "</head>",
            "<body>",
            "${0}",
            "   <script src=\"script.js\"></script>",
            "</body>",
            "</html>"
        ],
        "description": "Standard HTML Start Template"
    },
    "JS Function Template": {
        "prefix": "_js-func",
        "body": [
            "function ${1:name}() {",
            "   ${2:content}",
            "}"
        ],
        "description": "Standard JS Function"
    },
    "JS Class Template": {
        "prefix": "_js-class",
        "body": [
            "class ${1:name} {",
            "   constructor(${2:parameters}) {",
            "       ${3:content}",
            "   }",
            "${0}"
        ],
        "description": "Standard JS Class"
    },
    "JS If Template": {
        "prefix": "_js-if",
        "body": [
            "if (${1:condition}) {",
            "   ${2:content}",
            "}"
        ],
        "description": "Standard JS If Statment"
    },
    "JS Else Template": {
        "prefix": "_js-else",
        "body": [
            "else {",
            "   ${1:content}",
            "}"
        ],
        "description": "Standard JS Else Statment"
    },
    "JS Else If Template": {
        "prefix": "_js-elseif",
        "body": [
            "else if (${1:condition}) {",
            "   ${2:content}",
            "}"
        ],
        "description": "Standard JS Else If Statment"
    },
    "CSS Class Selector": {
        "prefix": "_css-class",
        "body": [
            ".${1:selector} {",
            "   ${2:content}",
            "}"
        ],
        "description": "Standard CSS Class Selector"
    },
    "CSS ID Selector": {
        "prefix": "_css-id",
        "body": [
            "#${1:selector} {",
            "   ${2:content}",
            "}"
        ],
        "description": "Standard CSS ID Selector"
    }
}